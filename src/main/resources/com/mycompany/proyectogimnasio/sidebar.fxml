<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<VBox spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-pref-width: 220;" xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.proyectogimnasio.Controllers.SidebarController">

    <Label text="FitGym Pro" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Circle radius="20" style="-fx-fill: #1abc9c;" />
        <VBox>
            <Label fx:id="usuarioLabel" style="-fx-text-fill: white; -fx-font-weight: bold;" />
            <Label fx:id="rolLabel" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12;" />

        </VBox>
    </HBox>

    <Separator style="-fx-background-color: #7f8c8d;" />

    <VBox spacing="15" style="-fx-background-color: #34495e; -fx-padding: 20; -fx-alignment: TOP_CENTER;" prefWidth="200">
        <Button fx:id="dashboardLink" text="Dashboard" style="-fx-pref-width: 180; -fx-background-color: white; -fx-text-fill: black" />
        <Button fx:id="clientesLink" text="Clientes" style="-fx-pref-width: 180; -fx-background-color: white; -fx-text-fill: black" />
        <Button fx:id="instructoresLink" text="Instructores" style="-fx-pref-width: 180; -fx-background-color: white; -fx-text-fill: black"/>
        <Button fx:id="reservasLink" text="Reservas" style="-fx-pref-width: 180; -fx-background-color: white; -fx-text-fill: black" />
        <Button fx:id="estadisticasLink" text="Estadísticas" style="-fx-pref-width: 180; -fx-background-color: white; -fx-text-fill: black" />
        <Button fx:id="horarioLink" text="Horario" style="-fx-pref-width: 180; -fx-background-color: white; -fx-text-fill: black" />
        <Button fx:id="clasesLink" text="Clases" style="-fx-pref-width: 180; -fx-background-color: white; -fx-text-fill: black" />

        <Region VBox.vgrow="ALWAYS" />

        <Button fx:id="logoutLink" text="Cerrar sesión" style="-fx-pref-width: 180; -fx-background-color: #e74c3c; -fx-text-fill: white;" />
    </VBox>

</VBox>
