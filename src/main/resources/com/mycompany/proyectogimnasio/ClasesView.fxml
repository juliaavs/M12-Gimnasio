<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyectogimnasio.Controllers.ClasesController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="772.0" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <Label text="Gestión de Clases" textFill="#0f807f">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <GridPane hgap="10.0" prefHeight="130.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               
               <!-- Fila 0: ID Clase (Oculto/Visible por código) y Actividad -->
               <Label text="Actividad:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
               <ComboBox fx:id="cbActividad" prefWidth="250.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />

               <!-- Fila 1: Día y Hora de Inicio -->
               <Label text="Día:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <!-- CAMBIO CRÍTICO: cbDia en lugar de txtDia -->
               <ComboBox fx:id="cbDia" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

               <Label text="Hora de Inicio:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <TextField fx:id="txtHoraInicio" promptText="Ej: 18:00:00" GridPane.columnIndex="3" GridPane.rowIndex="1" />

               <!-- Fila 2: Instructor y Status -->
               <Label text="Instructor:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <ComboBox fx:id="cbInstructor" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

               <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               <ComboBox fx:id="cbStatus" prefWidth="250.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />

            </GridPane>
            
            <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button onAction="#agregarClase" text="Agregar Clase" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
                  <Button onAction="#actualizarClase" text="Actualizar Clase" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
                  <Button onAction="#eliminarClase" text="Eliminar Clase" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" />
                  <Button onAction="#limpiarCampos" text="Limpiar Campos" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" />
               </children>
            </HBox>

            <TableView fx:id="tablaClases" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" minWidth="40.0" prefWidth="75.0" text="ID" />
                  <TableColumn fx:id="colDia" minWidth="60.0" prefWidth="90.0" text="Día" />
                  <TableColumn fx:id="colHoraInicio" minWidth="80.0" prefWidth="100.0" text="Hora Inicio" />
                  <TableColumn fx:id="colActividad" minWidth="100.0" prefWidth="180.0" text="Actividad" />
                  <TableColumn fx:id="colIdInstructor" minWidth="150.0" prefWidth="200.0" text="Instructor" />
                  <TableColumn fx:id="colStatus" minWidth="80.0" prefWidth="90.0" text="Estado" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
