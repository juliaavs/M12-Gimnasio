<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.proyectogimnasio.Controllers.ClasesController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">

    <Label text="Gestión de Clases" style="-fx-font-size: 20; -fx-font-weight: bold;" />

    <TableView fx:id="clasesTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId" text="ID Clase" prefWidth="80"/>
            <TableColumn fx:id="colActividad" text="Actividad" prefWidth="150"/>
            <TableColumn fx:id="colInstructor" text="Instructor" prefWidth="150"/>
            <TableColumn fx:id="colDia" text="Día" prefWidth="100"/>
            <TableColumn fx:id="colHora" text="Hora Inicio" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Estado" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
