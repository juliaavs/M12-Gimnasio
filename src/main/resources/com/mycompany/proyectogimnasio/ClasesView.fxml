<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyectogimnasio.Controllers.ClasesController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="572.0" prefWidth="772.0" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <Label text="Gestión de Clases" textFill="#0f807f">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <GridPane hgap="10.0" prefHeight="90.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Día:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <ComboBox fx:id="cbDia" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Label text="Actividad:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  <ComboBox fx:id="cbActividad" prefWidth="250.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                  <Label text="Hora de Inicio:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <ComboBox fx:id="cbHoraInicio" prefWidth="250.0" promptText="Ej: 09:00" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Instructor:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <ComboBox fx:id="cbInstructor" prefWidth="250.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  
                  <TextField fx:id="txtIdClase" visible="false" managed="false" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            
            <VBox prefHeight="30.0" prefWidth="200.0">
               <children>
                  <HBox fx:id="hboxEditar" alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button onAction="#handleGuardar" text="Actualizar Datos" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
                        <Button fx:id="btnToggleStatus" onAction="#handleToggleStatus" text="Estado" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold;" />
                        <Button onAction="#handleEliminar" text="Eliminar (Borrar)" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-weight: bold;" />
                     </children>
                  </HBox>
                  <HBox fx:id="hboxCrear" alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button onAction="#handleLimpiar" text="Limpiar Campos" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold;" />
                        <Button onAction="#handleGuardar" text="Agregar Clase" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <TableView fx:id="tablaClases" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" minWidth="40.0" prefWidth="75.0" text="ID" />
                  <TableColumn fx:id="colDia" minWidth="60.0" prefWidth="90.0" text="Día" />
                  <TableColumn fx:id="colHoraInicio" minWidth="80.0" prefWidth="100.0" text="Hora Inicio" />
                  <TableColumn fx:id="colActividad" minWidth="100.0" prefWidth="180.0" text="Actividad" />
                  <TableColumn fx:id="colIdInstructor" minWidth="150.0" prefWidth="200.0" text="Instructor" />
                  <TableColumn fx:id="colStatus" minWidth="80.0" prefWidth="90.0" text="Estado" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>