<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.proyectogimnasio.Controllers.DashboardController">

    <!-- Sidebar -->
    <left>
        <fx:include source="sidebar.fxml" fx:id="sidebar"/>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- Métricas -->
            <HBox spacing="20">
                <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Total Instructors" style="-fx-font-weight: bold;" />
                    <Label text="24" style="-fx-font-size: 24;" />
                    <Label text="+2 this month" style="-fx-text-fill: green;" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Total Clients" style="-fx-font-weight: bold;" />
                    <Label text="487" style="-fx-font-size: 24;" />
                    <Label text="+15 this week" style="-fx-text-fill: green;" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Today's Reservations" style="-fx-font-weight: bold;" />
                    <Label text="89" style="-fx-font-size: 24;" />
                    <Label text="-5 vs yesterday" style="-fx-text-fill: red;" />
                </VBox>
            </HBox>

            <!-- Today's Schedule -->
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Today's Schedule" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                    <Button text="+ Add Class" style="-fx-background-color: #1abc9c; -fx-text-fill: white;" />
                </HBox>

                <ListView fx:id="scheduleList" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
                    <!-- Clases dinámicas -->
                </ListView>
            </VBox>
        </VBox>
    </center>

</BorderPane>
