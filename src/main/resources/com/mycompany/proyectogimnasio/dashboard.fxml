<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane fx:id="mainPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.proyectogimnasio.Controllers.DashboardController">

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <HBox spacing="20">
                <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Instructores totales" style="-fx-font-weight: bold;" />
                    <Label fx:id="totalInstructorsLabel" text="-" style="-fx-font-size: 24;" />
                    <Label fx:id="instructorsChangeLabel" text="-" style="-fx-text-fill: green;" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Clientes totales" style="-fx-font-weight: bold;" />
                    <Label fx:id="totalClientsLabel" text="-" style="-fx-font-size: 24;" />
                    <Label fx:id="clientsChangeLabel" text="-" style="-fx-text-fill: green;" />
                </VBox>
                <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                    <Label text="Reservas hoy" style="-fx-font-weight: bold;" />
                    <Label fx:id="todayReservationsLabel" text="-" style="-fx-font-size: 24;" />
                    <Label fx:id="reservationsChangeLabel" text="-" style="-fx-text-fill: red;" />
                </VBox>
            </HBox>
            

            <VBox spacing="20" VBox.vgrow="ALWAYS">
            
                <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
                    <children>
                        <Label text="Horario de hoy" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                        <TableView fx:id="scheduleTable" prefHeight="250.0"> <columns>
                                <TableColumn fx:id="colHoyHora" prefWidth="90.0" text="Hora" />
                                <TableColumn fx:id="colHoyActividad" prefWidth="150.0" text="Actividad" />
                                <TableColumn fx:id="colHoyInstructor" prefWidth="150.0" text="Instructor" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
                
                <VBox VBox.vgrow="ALWAYS">
                     <BarChart fx:id="ocupacionChart" title="OcupaciÃ³n de Clases" VBox.vgrow="ALWAYS">
                        <xAxis><CategoryAxis fx:id="ocupacionX" label="Clase (ID)" /></xAxis>
                        <yAxis><NumberAxis fx:id="ocupacionY" label="Cantidad (Personas)" /></yAxis>
                     </BarChart>
                </VBox>
                
            </VBox>
            
        </VBox>
    </center>

</BorderPane>