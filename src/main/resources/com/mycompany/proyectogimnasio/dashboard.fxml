<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.mycompany.proyectogimnasio.DashboardController">

    <!-- Barra superior -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Label fx:id="welcomeLabel" text="Bienvenido!" style="-fx-text-fill: white; -fx-font-size: 16;" />
            <Label fx:id="roleLabel" text="Rol: " style="-fx-text-fill: white; -fx-font-size: 14;" />
        </HBox>
    </top>

    <!-- Menú lateral -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Button text="Dashboard" style="-fx-pref-width: 150; -fx-background-color: #1abc9c; -fx-text-fill: white;" />
            <Button text="Usuarios" style="-fx-pref-width: 150;" />
            <Button text="Configuración" style="-fx-pref-width: 150;" />
            <Button fx:id="logoutButton" text="Cerrar sesión" style="-fx-pref-width: 150; -fx-background-color: #e74c3c; -fx-text-fill: white;" />
        </VBox>
    </left>

    <!-- Contenido dinámico -->
    <center>
        <Label text="Aquí va el contenido principal" style="-fx-font-size: 18;" />
    </center>

</BorderPane>


