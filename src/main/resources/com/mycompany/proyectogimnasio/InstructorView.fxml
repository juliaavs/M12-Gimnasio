<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.proyectogimnasio.Controllers.InstructorController">

    <top>
        <Label text="GestiÃ³n de Instructores" style="-fx-font-size: 24px; -fx-padding: 10;" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <TableView fx:id="instructorTable" VBox.vgrow="ALWAYS" style="-fx-padding: 10;">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
                <TableColumn fx:id="nombreColumn" text="Nombre" prefWidth="150" />
                <TableColumn fx:id="apellidoColumn" text="Apellido" prefWidth="150" />
                <TableColumn fx:id="dniColumn" text="DNI" prefWidth="100" />
                <TableColumn fx:id="activoColumn" text="Activo" prefWidth="80" />
                <TableColumn fx:id="clasesColumn" text="Clases Asociadas" prefWidth="250" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-width: 0 0 0 1;">
            <Label text="Detalles del Instructor" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

            <Label text="Nombre"/>
            <TextField fx:id="nombreField" promptText="Nombre"/>

            <Label text="Apellido"/>
            <TextField fx:id="apellidoField" promptText="Apellido"/>

            <Label text="DNI"/>
            <TextField fx:id="dniField" promptText="DNI"/>

            <CheckBox fx:id="activoCheckbox" text="Instructor Activo"/>
            
            <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                <Button fx:id="saveButton" text="Guardar" onAction="#handleSaveInstructor" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />
                
                <Button text="Nuevo" onAction="#handleNewInstructor" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                
                <Button fx:id="deleteButton" text="Eliminar" onAction="#handleDeleteInstructor" disable="true" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
            
                <Button fx:id="btnCambiarEstado" text="Activar/Desactivar" onAction="#handleCambiarEstado"/>
            </HBox>
            
           
        </VBox>
    </right>
    
</BorderPane>