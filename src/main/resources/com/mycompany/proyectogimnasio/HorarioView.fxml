<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="950.0" style="-fx-background-color: #ecf0f1;" 
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.proyectogimnasio.Controllers.HorarioController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Horario de Clases Semanal" />
            
            <TableView fx:id="tablaHorarioManana" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colHoraManana" prefWidth="90.0" style="-fx-font-weight: bold; -fx-alignment: CENTER;" text="Hora" />
                <TableColumn fx:id="colLunesManana" prefWidth="120.0" text="Lunes" />
                <TableColumn fx:id="colMartesManana" prefWidth="120.0" text="Martes" />
                <TableColumn fx:id="colMiercolesManana" prefWidth="120.0" text="Miércoles" />
                <TableColumn fx:id="colJuevesManana" prefWidth="120.0" text="Jueves" />
                <TableColumn fx:id="colViernesManana" prefWidth="120.0" text="Viernes" />
                <TableColumn fx:id="colSabadoManana" prefWidth="120.0" text="Sábado" />
                <TableColumn fx:id="colDomingoManana" prefWidth="120.0" text="Domingo" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-background-color: #dfe6e9; -fx-padding: 5; -fx-background-radius: 4;" text="PAUSA ALMUERZO" />

            <TableView fx:id="tablaHorarioTarde" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colHoraTarde" prefWidth="90.0" style="-fx-font-weight: bold; -fx-alignment: CENTER;" text="Hora" />
                  <TableColumn fx:id="colLunesTarde" prefWidth="120.0" text="Lunes" />
                  <TableColumn fx:id="colMartesTarde" prefWidth="120.0" text="Martes" />
                  <TableColumn fx:id="colMiercolesTarde" prefWidth="120.0" text="Miércoles" />
                  <TableColumn fx:id="colJuevesTarde" prefWidth="120.0" text="Jueves" />
                  <TableColumn fx:id="colViernesTarde" prefWidth="120.0" text="Viernes" />
                  <TableColumn fx:id="colSabadoTarde" prefWidth="120.0" text="Sábado" />
                  <TableColumn fx:id="colDomingoTarde" prefWidth="120.0" text="Domingo" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
    <children>
        <Button fx:id="btnActualizar" onAction="#handleRefresh" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Actualizar Horario">
            <padding>
                <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
            </padding>
        </Button>
    
        <Button fx:id="btnDescartar" onAction="#handleDiscardChanges" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Descartar Cambios">
            <padding>
                <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
            </padding>
        </Button>
    
        <Button fx:id="btnEditar" onAction="#toggleEditMode" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Editar Horario">
            <padding>
                <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
            </padding>
        </Button>
    </children>
</HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>