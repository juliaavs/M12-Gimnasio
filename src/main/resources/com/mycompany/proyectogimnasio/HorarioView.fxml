<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.proyectogimnasio.Controllers.HorarioController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #ecf0f1;">

    <!-- Contenedor principal con margen -->
    <VBox alignment="TOP_LEFT" spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <!-- Título -->
        <Label text="Horario de Clases Semanal"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <!-- Tabla del Horario -->
        <TableView fx:id="tablaHorario" VBox.vgrow="ALWAYS">
            <columns>
                <!-- Columna para la HORA. Fija y visible a la izquierda. -->
                <TableColumn fx:id="colHora" text="Hora" prefWidth="120" style="-fx-font-weight: bold; -fx-alignment: CENTER; -fx-background-color: #dcdde1;"/>
                
                <!-- Columnas para cada día de la semana. -->
                <TableColumn fx:id="colLunes" text="Lunes" prefWidth="120"/>
                <TableColumn fx:id="colMartes" text="Martes" prefWidth="120"/>
                <TableColumn fx:id="colMiercoles" text="Miércoles" prefWidth="120"/>
                <TableColumn fx:id="colJueves" text="Jueves" prefWidth="120"/>
                <TableColumn fx:id="colViernes" text="Viernes" prefWidth="120"/>
                <TableColumn fx:id="colSabado" text="Sábado" prefWidth="120"/>
                <TableColumn fx:id="colDomingo" text="Domingo" prefWidth="120"/>
                
            </columns>
            <!-- Política de redimensionamiento para que las columnas se ajusten al ancho disponible -->
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Botones de Acción (ej. Actualizar o Agregar Clase) -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Actualizar Horario"
                    onAction="#handleRefresh"
                    style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-cursor: hand;"/>
            <Button text="Agregar Clase"
                    onAction="#handleAddClass"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-cursor: hand;"/>
        </HBox>
        
    </VBox>

</AnchorPane>
