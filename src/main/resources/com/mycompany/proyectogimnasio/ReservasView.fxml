<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?> 
<?import javafx.scene.control.TextField?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyectogimnasio.Controllers.ReservasController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <Label text="Gestión de Inscripciones/Reservas" style="-fx-font-size: 18pt; -fx-font-weight: bold;" />
    
    <TextField fx:id="txtFiltro" promptText="Buscar por clase, cliente o estado..." >        
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </TextField>
    <TableView fx:id="reservasTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nombreClaseColumn" prefWidth="75.0" text="Clase" />
            <TableColumn fx:id="nombreClienteColumn" prefWidth="75.0" text="Cliente" />
            <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Estado" />
            <TableColumn fx:id="diaReservaColumn" prefWidth="150.0" text="Día Reserva" />
            <TableColumn fx:id="idClaseColumn" prefWidth="75.0" text="ID Clase" visible="false" />
            <TableColumn fx:id="idClienteColumn" prefWidth="75.0" text="ID Cliente" visible="false" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <children>
            <Button onAction="#handleClearSelection" text="Limpiar Selección" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;" />
            <Button fx:id="toggleStatusButton" mnemonicParsing="false" onAction="#handleToggleStatus" text="Cambiar Estado" />
        </children>
    </HBox>
</VBox>