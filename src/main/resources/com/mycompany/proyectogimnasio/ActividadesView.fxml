<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyectogimnasio.Controllers.ActividadesController">
    <children>
        <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Actividades">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>
                        <TableView fx:id="tablaActividades" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="50.0" text="ID">
                                    <cellValueFactory><PropertyValueFactory property="idActividad" /></cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre">
                                    <cellValueFactory><PropertyValueFactory property="nombre" /></cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colDuracion" prefWidth="100.0" text="Duración (min)">
                                    <cellValueFactory><PropertyValueFactory property="duracion" /></cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colDescripcion" prefWidth="200.0" text="Descripción">
                                    <cellValueFactory><PropertyValueFactory property="descripcion" /></cellValueFactory>
                                </TableColumn>
                                <TableColumn fx:id="colAforo" prefWidth="80.0" text="Aforo">
                                    <cellValueFactory><PropertyValueFactory property="aforo" /></cellValueFactory>
                                </TableColumn>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <VBox prefWidth="350.0" minWidth="300.0" maxWidth="350.0" spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Detalles de la Actividad">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>
                        
                        <TextField fx:id="txtIdActividad" managed="false" visible="false" />

                        <GridPane hgap="10.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" vgrow="SOMETIMES" /> </rowConstraints>
                            <children>
                                <Label text="Nombre:" GridPane.rowIndex="0" />
                                <TextField fx:id="txtNombre" promptText="Ej: Spinning" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Duración (min):" GridPane.rowIndex="1" />
                                <ComboBox fx:id="cbDuracion" maxWidth="1.7976931348623157E308" promptText="Seleccionar duración" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                
                                <Label text="Aforo:" GridPane.rowIndex="2" />
                                <TextField fx:id="txtAforo" promptText="Ej: 25" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>

                        <Label text="Descripción:">
                             <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="txtDescripcion" prefHeight="150.0" promptText="Descripción de la actividad" wrapText="true" />
                        
                        <VBox VBox.vgrow="ALWAYS" />

                        <HBox alignment="CENTER" spacing="10.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <children>
                                <Button onAction="#limpiarCampos" text="Limpiar" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                                
                                <Button fx:id="btnActualizar" onAction="#actualizarActividad" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Actualizar" visible="false" managed="false" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                                
                                <Button fx:id="btnAgregar" onAction="#agregarActividad" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Agregar" visible="true" managed="true" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>