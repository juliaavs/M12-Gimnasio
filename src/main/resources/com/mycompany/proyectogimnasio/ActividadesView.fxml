<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.proyectogimnasio.Controllers.ActividadesController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <VBox spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de Actividades" />
            <TableView fx:id="tablaActividades">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="50.0" text="ID">
                     <cellValueFactory><PropertyValueFactory property="idActividad" /></cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="colNombre" prefWidth="120.0" text="Nombre">
                     <cellValueFactory><PropertyValueFactory property="nombre" /></cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="colDuracion" prefWidth="100.0" text="Duración (min)">
                     <cellValueFactory><PropertyValueFactory property="duracion" /></cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="colDescripcion" prefWidth="200.0" text="Descripción">
                     <cellValueFactory><PropertyValueFactory property="descripcion" /></cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="colAforo" prefWidth="80.0" text="Aforo">
                     <cellValueFactory><PropertyValueFactory property="aforo" /></cellValueFactory>
                  </TableColumn>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      <VBox prefWidth="300.0" spacing="15.0">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Detalles de la Actividad" />
            <TextField fx:id="txtIdActividad" managed="false" visible="false" />
            <Label text="Nombre:" />
            <TextField fx:id="txtNombre" promptText="Ej: Spinning" />
            <Label text="Descripción:" />
            <TextArea fx:id="txtDescripcion" prefHeight="100.0" promptText="Descripción de la actividad" wrapText="true" />
            
            <Label text="Duración (minutos):" />
            <ComboBox fx:id="cbDuracion" prefWidth="1.7976931348623157E308" promptText="Seleccionar duración" />
            
            <Label text="Aforo:" />
            <TextField fx:id="txtAforo" promptText="Ej: 25" />
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <padding>
                  <Insets top="10.0" />
               </padding>
               <children>
                  <Button onAction="#limpiarCampos" text="Limpiar" />
                  <Button onAction="#eliminarActividad" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar" />
                  <Button onAction="#actualizarActividad" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Actualizar" />
                  <Button onAction="#agregarActividad" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Agregar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>